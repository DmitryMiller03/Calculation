<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#040303"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/math_operation"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        android:textSize="50sp"
        android:textColor="@color/white">

    </TextView>

    <TextView
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        android:textSize="35sp"
        android:textColor="@color/blue">

    </TextView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="15sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/AC_btn"
                style="@style/ACButton"
                android:text="AC"
                android:layout_margin="5sp">

            </TextView>

            <TextView
                android:id="@+id/firstBracket_btn"
                style="@style/ActionButton"
                android:text="("
                android:layout_margin="5sp">

            </TextView>

            <TextView
                android:id="@+id/secondBracket_btn"
                style="@style/ActionButton"
                android:text=")"
                android:layout_margin="5sp">

            </TextView>

            <TextView
                android:id="@+id/divide_btn"
                style="@style/ActionButton"
                android:text="/"
                android:layout_margin="5sp">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/btn_7"
                style="@style/NumberButton"
                android:text="7"
                android:layout_margin="5sp"/>

            <TextView
                android:id="@+id/btn_8"
                style="@style/NumberButton"
                android:text="8"
                android:layout_margin="5sp">
            </TextView>

            <TextView
                android:id="@+id/btn_9"
                style="@style/NumberButton"
                android:text="9"
                android:layout_margin="5sp">
            </TextView>

            <TextView
                android:id="@+id/multiply_btn"
                style="@style/ActionButton"
                android:text="x"
                android:layout_margin="5sp">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_4"
                style="@style/NumberButton"
                android:text="4"
                android:layout_margin="5sp"/>

            <TextView
                android:id="@+id/btn_5"
                style="@style/NumberButton"
                android:text="5"
                android:layout_margin="5sp"/>

            <TextView
                android:id="@+id/btn_6"
                style="@style/NumberButton"
                android:text="6"
                android:layout_margin="5sp"/>

            <TextView
                android:id="@+id/minus_btn"
                style="@style/ActionButton"
                android:text="-"
                android:layout_margin="5sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_1"
                style="@style/NumberButton"
                android:text="1"
                android:layout_margin="5sp"/>

            <TextView
                android:id="@+id/btn_2"
                style="@style/NumberButton"
                android:text="2"
                android:layout_margin="5sp"/>

            <TextView
                android:id="@+id/btn_3"
                style="@style/NumberButton"
                android:text="3"
                android:layout_margin="5sp"/>

            <TextView
                android:id="@+id/plus_btn"
                style="@style/ActionButton"
                android:text="+"
                android:layout_margin="5sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_0"
                style="@style/NumberButton"
                android:text="0"
                android:layout_margin="5sp"/>

            <TextView
                android:id="@+id/btn_dot"
                style="@style/NumberButton"
                android:text="."
                android:layout_margin="5sp"/>

            <TextView
                android:id="@+id/btn_delite"
                style="@style/NumberButton"
                android:text="Del"
                android:layout_margin="5sp"/>

            <TextView
                android:id="@+id/equals_btn"
                style="@style/ActionButton"
                android:text="="
                android:textSize="20sp"
                android:layout_margin="5sp">
            </TextView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

